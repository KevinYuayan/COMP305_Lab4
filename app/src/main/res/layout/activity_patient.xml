<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.PatientActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:srcCompat="@drawable/new_paitent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="                                          New Patient" />

    <TextView
        android:id="@+id/PaitentIdlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="    PatientId" />

    <EditText
        android:id="@+id/PaitentIdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/PaitentNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="    Patient Name" />

    <EditText
        android:id="@+id/PaitentNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/DepartmentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="    Department" />

    <EditText
        android:id="@+id/DepartmentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/DoctorLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="    Doctor ID" />

    <EditText
        android:id="@+id/DoctorIdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/RoomNoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="    Room No." />

    <EditText
        android:id="@+id/RoomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/savebutton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="SAVE" />
</LinearLayout>